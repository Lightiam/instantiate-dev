# Instantiate.dev Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=your_postgresql_database_url

# AI Chat Service
GROQ_API_KEY=your_groq_api_key

# Cloud Provider Credentials (Optional - can be configured via UI)
# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1

# Azure Configuration
AZURE_CLIENT_ID=your_azure_client_id
AZURE_CLIENT_SECRET=your_azure_client_secret
AZURE_TENANT_ID=your_azure_tenant_id
AZURE_SUBSCRIPTION_ID=your_azure_subscription_id

# Google Cloud Platform Configuration
GOOGLE_APPLICATION_CREDENTIALS=path_to_your_gcp_service_account_json
GCP_PROJECT_ID=your_gcp_project_id_here

# Kubernetes Configuration
KUBECONFIG=path_to_your_kubeconfig_file

# GitHub Integration (Optional)
GITHUB_PERSONAL_ACCESS_TOKEN=your_github_token

# Production Environment
NODE_ENV=production
PORT=5000
